{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "outDir": "./bin",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "wow/wotlk": ["../../bin/scripts/wow/wotlk"],
      "wow/wotlk/*": ["../../bin/scripts/wow/wotlk/*"]
    }
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "bin/**/*"
  ]
}
